{
    "name": "default",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "base configuration for all nodes",
    "default_attrubutes": {
        "ntp": {
            "servers": [ 
                "0.pool.ntp.org", 
                "1.pool.ntp.org", 
                "2.pool.ntp.org", 
                "3.pool.ntp.org" 
            ]
        },
        "snmp": {
            "community": "monitor",
            "sec_name": {
                "monitorUser": [
                    "192.168.0.1/24"
                ]
            },
            "full_systemview": "true",
            "groups": {
                "v2c": {
                    "monitorGroup": [
                        "monitorUser"
                    ]
                }
            }
        },
        "yum": {
            "epel": {
                "enabled": false
            }
        },
        "yum-epel": {
            "repositories": [
                "epel"
            ]
        },
        "yum-centos": {
            "extras": {
                "enabled": false
            }
        },
        "authorization": {
            "sudo": {
                "users": [
                    "root"
                ],
                "groups": [
                    "wheel",
                    "vgp_admin"
                ],
                "include_sudoers": true,
                "sudoers_defaults": [
                    "requiretty",
					"env_reset",
					"env_keep = \"COLORS DISPLAY HOSTNAME HISTSIZE INPUTRC KDEDIR LSCOLORS\"",
					"env_keep += \"LS_COLORS MAIL PS1 PS2 QTDIR USERNAME LANG LC_ADDRESS LC_CTYPE\"",
					"env_keep += \"LC_COLLATE LC_IDENTIFICATION LC_MEASUREMENT LC_MESSAGES\"",
					"env_keep += \"LC_MONETARY LC_NAME LC_NUMERIC LC_PAPER LC_TELEPHONE\"",
					"env_keep += \"LC_TIME LC_ALL LANGUAGE LINGUAS _XKB_CHARSET XAUTHORITY\"",
					"secure_path = /sbin:/bin:/usr/sbin:/usr/bin",
					"mailto = \"teodoro.cook@gmail.com\", mail_always"
				]
            }
        },
		"openssh": {
			"openssh": {
                "server": {
                    "Port": "22",
                    "Protocol": "2",
                    "HostKey": [
                        "/etc/ssh/ssh_host_rsa_key",
                        "/etc/ssh/ssh_host_dsa_key",
                        "/etc/ssh/ssh_host_ecdsa_key",
                        "/etc/ssh/ssh_host_ed25519_key"
                    ],
                    "UsePrivilegeSeparation": "yes",
                    "KeyRegenerationInterval": "3600",
                    "ServerKeyBits": "1024",
                    "SyslogFacility": "AUTH",
                    "LogLevel": "INFO",
                    "LoginGraceTime": "120",
                    "PermitRootLogin": "prohibit-password",
                    "StrictModes": "yes",
                    "RSAAuthentication": "yes",
                    "PubkeyAuthentication": "yes",
                    "IgnoreRhosts": "yes",
                    "RhostsRSAAuthentication": "no",
                    "HostbasedAuthentication": "no",
                    "PermitEmptyPasswords": "no",
                    "ChallengeResponseAuthentication": "no",
                    "X11Forwarding": "yes",
                    "X11DisplayOffset": "10",
                    "PrintMotd": "no",
                    "PrintLastLog": "yes",
                    "TCPKeepAlive": "yes",
                    "AcceptEnv": "LANG LC_*",
                    "Subsystem": "sftp /usr/lib/openssh/sftp-server",
                    "UsePAM": "yes"
                }
			}
		}
    },
    "run_list": [
        "recipe[ntp]",
        "recipe[snmp]",
        "recipe[sudo]",
        "recipe[yum-epel]",
        "recipe[yum-centos]",
        "recipe[openssh]"
    ]
}
